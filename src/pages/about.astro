---
import { Picture } from "@astrojs/image/components";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import {AboutUs} from "../data/about-us";
---

<Layout title={AboutUs.title}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">{AboutUs.title}</Fragment>
      <Fragment slot="desc"></Fragment>
    </Sectionhead>
    <div class="divide-y divide-gray-200 dark:divide-gray-700">
      <div class="items-start space-y-2 xl:grid xl:grid-cols-2 xl:gap-x-8 xl:space-y-0">
        <div class="flex flex-col items-center pt-8">
          <Picture
            src={AboutUs.imageSrc}
            alt={AboutUs.title}
            widths={[320, 640, 1024]}
            aspectRatio="5:3"
            sizes={"(min-width: 320px) 1024px, 100vw"}
            fit="cover"
          />
        </div>
        <div class="prose max-w-none pt-8 lg:pt-16 pb-1 dark:prose-dark xl:col-span-1">
          <h2>{AboutUs.subtitle}</h2>
          {AboutUs.description.split('\n').map((item, i) => (
            <p class="pt-1">{item}</p>
          ))}
        </div>
      </div>
    </div>
  </Container>
</Layout>
